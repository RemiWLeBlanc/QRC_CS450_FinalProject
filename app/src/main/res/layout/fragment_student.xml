<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".StudentFragment"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/HelloStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Student!"
        android:gravity="center"
        android:textSize="60sp"
        android:fontFamily="@font/latolight"
        />

    <Button
        android:id="@+id/ScheduleASessionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule a Tutoring session"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/latolight"
        />

    <Button
        android:id="@+id/CheckInToQRCButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check in to QRC"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/latolight"
        />
    <Button
        android:id="@+id/WriteEvaluationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write an Evaluation"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/latolight"/>
    <Button
        android:id="@+id/StudyCornerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Study Corner"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/latolight"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_gravity="bottom"
        android:layout_margin="50dp"
        />



</LinearLayout>